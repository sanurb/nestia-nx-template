{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sanurb/nestia-nx-template/infra-metrics": [
        "libs/infra-metrics/src/index.ts"
      ],
      "@sanurb/nestia-nx-template/infra-nest-server": [
        "libs/infra-nest-server/src/index.ts"
      ],
      "@sanurb/nestia-nx-template/logging": ["libs/logging/src/index.ts"],
      "@sanurb/nestia-nx-template/nest/problem": [
        "libs/nest/problem/src/index.ts"
      ],
      "@sanurb/nestia-nx-template/shared": ["libs/shared/problem/src/index.ts"],
      "@sanurb/nestia-nx-template/testing": ["libs/testing/nest/src/index.ts"]
    },
    "plugins": [
      {
        "transform": "@nestia/core/lib/transform",
        "validate": "assert",
        "stringify": "assert"
      },
      {
        "transform": "typia/lib/transform"
      },
      {
        "transform": "@nestia/sdk/lib/transform"
      }
    ],
    "strictNullChecks": true,
    "strict": true
  },
  "exclude": ["node_modules", "tmp"]
}
